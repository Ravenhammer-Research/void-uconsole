# Sudo configuration for {{ item.name }}
# Generated by Ansible

{% if item.sudo_type == 'full' %}
{{ item.name }} ALL=(ALL) ALL
{% elif item.sudo_type == 'nopasswd' %}
{{ item.name }} ALL=(ALL) NOPASSWD:ALL
{% elif item.sudo_type == 'commands' %}
{% for command in item.commands %}
{{ item.name }} ALL=(ALL) {{ command }}
{% endfor %}
{% elif item.sudo_type == 'groups' %}
{% for group in item.groups %}
%{{ group }} ALL=(ALL) ALL
{% endfor %}
{% else %}
{{ item.name }} ALL=(ALL) ALL
{% endif %}
